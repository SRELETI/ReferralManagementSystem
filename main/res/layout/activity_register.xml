<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs792.projectapp.Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_userName"
        android:text="@string/Reg_userName"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_password"
        android:text="@string/Reg_password"
        android:layout_alignLeft="@+id/Reg_userName"
        android:layout_below="@+id/Reg_userName"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_confirmPassword"
        android:text="@string/Reg_confirmPassword"
        android:layout_alignLeft="@+id/Reg_userName"
        android:layout_below="@+id/Reg_password"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_userEnteredText"
        android:layout_alignBottom="@+id/Reg_userName"
        android:layout_toRightOf="@+id/Reg_userName"
        android:layout_marginLeft="34dp"
        android:ems="10">
        <requestFocus/>
    </EditText>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_passwordEntered"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/Reg_password"
        android:layout_toRightOf="@+id/Reg_password"
        android:layout_marginLeft="35dp"
        android:ems="10"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_confirmPassEntered"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/Reg_confirmPassword"
        android:layout_toRightOf="@+id/Reg_confirmPassword"
        android:layout_marginLeft="5dp"
        android:ems="8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_Email"
        android:text="@string/Reg_EmailText"
        android:layout_alignLeft="@+id/Reg_userName"
        android:layout_below="@+id/Reg_confirmPassword"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <EditText
        android:id="@+id/Reg_EmailEntered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_alignBottom="@+id/Reg_Email"
        android:layout_toRightOf="@+id/Reg_Email"
        android:layout_marginLeft="75dp"
        android:ems="10"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_typeDropdown"
        android:prompt="@string/Reg_typePrompt"
        android:layout_toRightOf="@+id/Reg_SelectType"
        android:layout_below="@+id/Reg_Email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_alignBottom="@+id/Reg_SelectType"
         />
    <Button
        android:id="@+id/Reg_RegisterSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Reg_SelectType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/Reg_submitRegister"
        android:background="@drawable/button_color3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_SelectType"
        android:text="@string/Reg_UserType"
        android:layout_below="@+id/Reg_Email"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

</RelativeLayout>
